<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuCombustível.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
            <Label Text="Preço do etanol: "></Label>
            <Entry x:Name="txt_etanol" Placeholder="R$"> </Entry>
            <Label Text="Preço da gasolina: "></Label>
            <Entry x:Name="txt_gasolina" Placeholder="R$ "></Entry>
            <Button Text="Qual compensa mais?" Clicked="Button_Clicked"></Button>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
